        <button data-item="${item['oid']}" data-url="${url}" type="button" class="btn btn-primary explanation-validation">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
