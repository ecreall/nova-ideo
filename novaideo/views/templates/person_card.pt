<div class="thumbnail right-caption span4 search-item search-item-bloc"
     i18n:domain="novaideo"
     tal:define="url request.resource_url(object, '@@index');
                 picture object.picture;
                 profil_picture getattr(picture, 'profil', picture);
                 default_img request.static_url('novaideo:static/images/user.png');">
  <div role="presentation" class="card-img" 
       style="
          background: transparent url(${getattr(picture, 'blur', picture).url if picture else request.static_url('novaideo:static/images/background_user.svg')}) no-repeat scroll center center / cover ;">
    <div class="object-menu pull-right">
        <div tal:replace="structure menu_body"/>
      </div>
    <img class="img-circle"
        tal:attributes="src profil_picture.url if profil_picture else default_img"  width="70"/>
  </div>
  <div class="caption">
      <div class="card-data">
          <a href="${url}" class="card-title" title="${getattr(object, 'title', object.name)}">
                ${((object is current_user) and 'Vous') or getattr(object, 'title', object.name)}
          </a>
        <div class="card-addon">
          <small>
            <span>${getattr(object, 'function', '')}</span>
          </small>
          <div tal:condition="getattr(object, 'organization', None)" class="card-addon-item">
            <a i18n:attributes="title" title="Organization" tal:attributes="href request.resource_url(object.organization, '@@index')"><span class="glyphicon glyphicon-home"></span> ${object.organization.title}</a>
          </div>
        </div>
      </div>

      <div class="search-item-footer">
        <div class="actions-block">
          <div tal:replace="structure footer_body"/>
        </div>
      </div>
  </div>
</div>