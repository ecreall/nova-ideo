<div class="thumbnail right-caption span4 search-item"  i18n:domain="novaideo">
  <div id="proposal-image" class="content-image">
<img src="${request.static_url('novaideo:static/images/proposal.png')}" width="100">
  </div>
  <div class="media-body">
    <h4 tal:condition="object.state"><span class="label label-basic pull-right">${object.state[0].capitalize()}</span></h4>
    <a tal:attributes="href request.resource_url(object, '@@index')"><h3>${object.title} </h3></a>
    <dl i18n:domain="novaideo">
      <dt i18n:translate="">Abstract</dt><dd>${object.description}</dd>
      <dt tal:condition="object.keywords"  i18n:translate="">Keywords</dt>
      <dd tal:condition="object.keywords">
        <tal:loop repeat="k object.keywords">
          <a tal:attributes="href request.resource_url(request.root, '', query={'text':k})">${k}</a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
        </tal:loop>
      </dd>
    </dl>
    <span><span  i18n:translate="">Modifiée le </span><span tal:replace="layout.to_localized_time(object.modified_at, date_only=True)"/><span  i18n:translate=""> à ${object.modified_at.hour}:${object.modified_at.minute}:${object.modified_at.second} par </span><a tal:attributes="href request.resource_url(object.author, '@@index')">${((object.author is current_user) and 'Vous') or object.author.name}</a></span>
  <div tal:condition="'published' in object.state" class="proposal-support pull-right">
    <span class="label label-success">
        <span class="glyphicon glyphicon-thumbs-up"></span>
        <span class="support-nb">${len(object.tokens_support)}</span>
    </span>
    <span class="label label-danger">
        <span class="glyphicon glyphicon-thumbs-down"></span>
        <span class="support-nb">${len(object.tokens_opposition)}</span>
    </span>
  </div>
  </div>
</div>
