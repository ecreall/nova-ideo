<html metal:extend-macro="login_template" i18n:domain="novaideo">
 <head>
    <metal:slot metal:define-slot="head-more" />
 </head>
 <body>

  <metal:slot metal:fill-slot="before-login-form">
   <metal:slot metal:define-slot="before-login-form">

     <div class="alert alert-danger">
       <span i18n:translate="">Sorry, your account is not allowed to perform the requested action.
       You can try to log in using a different account below or you can</span>
       <a onclick="javascript:history.go(-2)"><span i18n:translate="">return to where you were</span></a>.
     </div>

   </metal:slot>
  </metal:slot>

  <metal:slot metal:fill-slot="login-form-title">
   <metal:slot metal:define-slot="login-form-title">
    <h2 i18n:translate="">Log in as another User</h2>
   </metal:slot>
  </metal:slot>

  <metal:slot metal:define-slot="password-reset-link">
  </metal:slot>

 </body>
</html>
